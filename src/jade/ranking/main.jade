ion-view.ranking
    ion-nav-title People Ranking
    ion-nav-buttons(side="left")
        a.button.button-icon.ion-ios-arrow-left(ng-click="back()")
            img.logo(
            src="./img/logo/navbar.png"
            srcset="./img/logo/navbar@2x.png 2x"
            )
    ion-nav-buttons(side="right")
        a.button.button-clear(ng-click="")
            i.icon.ion-android-more-vertical

    ion-content.content(scroll="false")
        ion-tabs.tabs-striped.tabs-top.tabs-icon-left.tabs-background-positive.tabs-color-light
            ion-tab(title="Prediction")
                ion-content.prediction.fix-tab
                    div(ui-view="prediction")
            ion-tab(title="Score")
                ion-content.score.fix-tab
                    div(ui-view="score")
            ion-tab(title="Player")
                ion-content.player.fix-tab
                    div(ui-view="player")
