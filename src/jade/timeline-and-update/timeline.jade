ion-refresher(pulling-text='Pull to refresh...', on-refresh='timeline.doRefresh()')
    div.live-view(ng-show='timeline.isLive')
div.row.section
    div.col
        | Live
        div.row
    div.col
        | match-label
        div.timeline-view
div.nodata(ng-if='timeline.items.length == 0')
    div.row.header
        div.col
    div.row
        div.col.col-center.text-center
            div.text Has no timeline.
                div(ng-repeat='item in timeline.items')
    div(ng-class="item.template == 'hightlight' ? '-hightlight' : ''")
        div.row.header
            div.col
                div.row.datetime
            div.col
                | {{item.datetime | date :'dd/MM/yyyy | HH:mm'}}
                div.cover(ng-show='item.images.length')
            div.images
                img(ng-src='item.images[0]', width='100%', height='100%')
                div.detail(ng-class="item.template == 'hightlight' ? '-hightlight' : ''")
            div.subdetail
                div.row.description
                    div.col
                        span {{item.description}}
                            div.row.footer
                    div.col.col-90.col-center
                        img.photo(src='{{item.user.photo}}')
                        span.name {{item.user.name}}
                    div.col.col-10.col-center(style='margin-left: -4px;')
                        a.button.button-icon.icon.ion-android-share-alt.share(ng-click='')
                            ion-infinite-scroll(ng-if='timeline.next' on-infinite='timeline.loadMore()', distance='1%')