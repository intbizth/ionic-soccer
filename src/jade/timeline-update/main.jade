ion-view.timeline-update
    ion-nav-title {{'timeline_update.title' | trans}}
    ion-nav-buttons(side="left")
        a.button.button-nav.button-icon.ion-ios-arrow-left(ng-if="isIOS", ng-click="back()")
            img.logo(
            src="./img/logo/navbar.png"
            srcset="./img/logo/navbar@2x.png 2x"
            )

    ion-content.content(scroll="false")
        ion-tabs.tabs-striped.tabs-top.tabs-icon-left.tabs-background-positive.tabs-color-light
            ion-tab(
            title="{{'timeline_update.tab.timeline' | trans}}",
            icon-on="ion-ios-chatbubble",
            icon-off="ion-ios-chatbubble-outline"
            )
                ion-content.timeline.fix-tab
                    div(ui-view="timeline")
            ion-tab(
            title="{{'timeline_update.tab.update' | trans}}",
            icon-on="ion-ios-paper",
            icon-off="ion-ios-paper-outline"
            )
                ion-content.update.fix-tab
                    div(ui-view="update")
