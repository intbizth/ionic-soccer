ion-refresher(pulling-text="Pull to refresh...", on-refresh="doRefresh()")

div.live(ng-show="timeline.isLive")
    div.row.section
        div.col
            span.text Live

    div.match-label
        div.nodata(ng-if="matchLabel.sections.length == 0")
            div.space
            div.row
                div.col.col-center.text-center
                    div.text Has no match.
        div(ng-repeat="section in matchLabel.sections")
            div.row.row-center.section
                div.col.col-center.text-center
                    | {{section.datetime | date : 'MMM yyyy'}}
            div.nodata(ng-if="section.items.length == 0")
                div.space
                div.row
                    div.col.col-center.text-center
                        div.text Has no match.
            div(ng-repeat="item in section.items")
                div.row.label
                    div.col.col-15.col-center.logo.text-center
                        img.image(ng-src="{{item.homeClub.logo}}")
                    div.col.col-25.col-center.name.text-center
                        | {{item.homeClub.name}}
                    div.col.col-20.col-center.detail.text-center
                        div(ng-show="item.template == 'before'")
                            div.time
                                | {{item.datetime | date:'HH:mm'}}
                            div.date
                                | {{item.datetime | date:'dd MMM yyyy'}}
                        div(ng-show="item.template == 'after'")
                            div.score
                                | {{item.homeClub.score}}-{{item.awayClub.score}}
                            div.date
                                | {{item.datetime | date:'dd MMM yyyy'}}
                    div.col.col-25.col-center.name.text-center
                        | {{item.awayClub.name}}
                    div.col.col-15.col-center.logo.text-center
                        img.image(ng-src="{{item.awayClub.logo}}")

div.timeline
    div.nodata(ng-if="timeline.items.length == 0")
        div.space
        div.row
            div.col.col-center.text-center
                div.text Has no timeline.
    div(ng-repeat="item in timeline.items")
        div(ng-class="item.template == 'hightlight' ? '-hightlight' : ''")
                div.space
                div.row.datetime
                    div.col
                        | {{item.datetime | date :"dd/MM/yyyy | HH:mm"}}
                div.cover(ng-if="item.images.length > 0")
                    div.images
                        img(ng-src="{{item.images[0]}}", width="100%", height="100%")
                div.detail(ng-class="item.template == 'hightlight' ? '-hightlight' : ''")
                    div.subdetail
                        div.row.description
                            div.col
                                span {{item.description}}
                        div.row.footer
                            div.col.col-90.col-center
                                div.userbox
                                    img.photo(ng-src="{{item.user.photo}}")
                                    span.name {{item.user.name}}
                            div.col.col-10.col-center(style="margin-left: -4px;")
                                a.button.button-icon.icon.ion-android-share-alt.share(ng-click="share()")

ion-infinite-scroll(ng-if="timeline.next" on-infinite="loadMore()", distance="5%")
