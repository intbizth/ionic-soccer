ion-view.competition-table
    ion-nav-title {{'competition_table.title' | trans}}
    ion-nav-buttons(side="left")
        a.button.button-nav.button-icon.ion-ios-arrow-left(ng-if="isIOS", ng-click="back()")
            img.logo(
            src="./img/logo/navbar.png"
            srcset="./img/logo/navbar@2x.png 2x"
            )

    ion-content.content(scroll="false")
        ion-tabs.tabs-striped.tabs-top.tabs-icon-left.tabs-background-positive.tabs-color-light
            ion-tab(title="{{'competition_table.tab.fixture' | trans}}")
                ion-content.fixture.fix-tab
                    div(ui-view="fixture")
            ion-tab(title="{{'competition_table.tab.result' | trans}}")
                ion-content.results.fix-tab
                    div(ui-view="results")
            ion-tab(title="{{'competition_table.tab.position_table' | trans}}")
                ion-content.position-table.fix-tab
                    div(ui-view="position-table")
