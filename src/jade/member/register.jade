ion-view.member-register
    ion-nav-title Register
    ion-nav-buttons(side="left")
        a.button.button-nav.button-icon.ion-ios-arrow-left(ng-if="isIOS", ng-click="back()")
            img.logo(
            src="./img/logo/navbar.png"
            srcset="./img/logo/navbar@2x.png 2x"
            )
    ion-content.content(scroll="false", on-double-tap="data.fake()", on-hold="data.reset()")
        div.member-form
            div.form
                div.row
                    div.col.text-center
                        input(ng-model="data.username", type="text", placeholder="Username", maxlength="255")
                div.row
                    div.col.text-center
                        input(ng-model="data.email", type="text", placeholder="Email", maxlength="255")
                div.row
                    div.col.text-center
                        input(ng-model="data.password", type="password", placeholder="Password", maxlength="255")
                div.row
                    div.col.text-center
                        input(ng-model="data.confirmPassword", type="password", placeholder="Confirm password", maxlength="255")
            div.submit
                div.row
                    div.col.text-center
                        button.button.button-positive Next
