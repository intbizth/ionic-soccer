ion-view.member-register
    ion-nav-title Register
    ion-nav-buttons(side="left")
        a.button.button-nav.button-icon.ion-ios-arrow-left(ng-if="isIOS", ng-click="back()")
            img.logo(
            src="./img/logo/navbar.png"
            srcset="./img/logo/navbar@2x.png 2x"
            )
    ion-content.content(scroll="false", on-double-tap="data.fake()", on-hold="data.reset()")
        div.member-form
            div.form
                div.row.photo
                    div.col.text-center
                        img.blank(ng-show="!photo.isPhoto", src="./img/member/profile.png", srcset="./img/member/profile@2x.png 2x")
                        img.user(ng-show="photo.isPhoto", id="photo-user", src="https://v.cdn.vine.co/v/avatars/D424297E-9E91-4B64-A95C-CEC25BCB1A5F-5943-000006F0E1F5204B.jpg?versionId=06Ft1N9hxhK_nH6RL_EXR3Y3yHokjZ0R")
                div.row.control
                    div.col.text-right
                        button.button.button-outline.button-light.icon.ion-ios-plus-empty
                    div.col.text-left
                        button.button.button-outline.button-light.icon.ion-ios-camera-outline(ng-click="photo.openCamera()")
                div.row
                    div.col.text-center
                        input(
                        ng-model="data.firstname",
                        ng-model-options="{ getterSetter: true }",
                        ng-change="data.valid()",
                        type="text",
                        name="firstname",
                        placeholder="Firstname",
                        maxlength="255"
                        )
                div.row
                    div.col.text-center
                        input(
                        ng-model="data.lastname",
                        ng-model-options="{ getterSetter: true }",
                        ng-change="data.valid()",
                        type="text",
                        name="lastname",
                        placeholder="Lastname",
                        maxlength="255"
                        )
            div.submit
                div.row
                    div.col.text-center
                        button.button.button-positive(ng-disabled="!data.isPass") Done
