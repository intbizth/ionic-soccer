ion-view.live-main
    ion-nav-title
        a.button.button-clear(ng-click='back()')(style="margin-top:5px;")
            i.icon.ion-ios-keypad-outline
    ion-nav-buttons(side='right')
        a.button.button-clear(ng-click='')
            i.icon.ion-android-more-vertical
    div.bar.bar-subheader(style="background-color:#0056A5;")
        h2.title(style="color:#ffffff;") {{headline}}

    ion-content.content
        div.month {{dateTop}}

        div.row(style="background-color:white;")
            div.col.col-15
                div.logo
                    img(ng-src="./img/live/chonburi.png", width="40px")

            div.col.col-25
                div.name
                    span {{matchLabel.homeClub.name}}

            div.col.col-20
                div.score
                    span {{matchLabel.homeClub.score}} - {{matchLabel.awayClub.score}}
                div.date
                    span {{matchLabel.dateTime| date:'dd MMM yyyy'}}

            div.col.col-25
                div.name
                    span {{matchLabel.awayClub.name}}

            div.col.col-15
                div.logo
                    img(ng-src="./img/live/suphanburi.png", width="40px")

        div.video
            iframe(ng-src="https://www.youtube.com/embed/3iL1Vy671Ds", width="100%" ,height="230")

        div.detail(ng-repeat="player in players")
            div.row.border.-top
                div.col.border.text-right
                div.col.border.col-10
                    div.circle-start
                        div.circle
                    div.line
                div.col.border.text-left

            div.row.border
                div.col.border.text-right
                div.col.border.col-10
                    div.line.-line25
                div.col.border.text-left.text-yellow
                    span {{player.start}}

            div.row.border
                div.col.border.text-right(style="padding-top:12px;")
                    span.playerName {{player.name1}}
                    img(ng-src="./img/live/yellowCard.png", style="padding-left:5px;", width="20px")
                    span.text-yellow {{player.time1}}
                div.col.border.col-10
                    div.line.-line20
                    div.circle-activity
                div.col.border.text-left

            div.row.border
                div.col.border.text-right
                div.col.border.col-10
                    div.line.-line50
                    div.circle-activity
                div.col.border.text-left(style="padding-top:42px;")
                    span.text-yellow {{player.time2}}
                    img(src="./img/live/yellowCard.png", style="padding-left:5px;" , width="20px")
                    span.playerName {{player.name2}}

            div.row.border
                div.col.border.text-right(style="padding-top:2px;")
                    span.playerName {{player.name3}}
                    img(ng-src="./img/live/goal.png", style="padding-left:5px;", width="20px")
                    span.text-yellow  {{player.time3}}
                div.col.border.col-10
                    div.line.-line10
                    div.circle-activity
                div.col.border.text-left

            div.row.border
                div.col.border.text-right
                div.col.border.col-10
                    div.line.-line25
                    div.circle-activity.-halftime
                div.col.border.text-left(style="padding-top:17px;")
                    span.text-yellow {{player.ht}}

            div.row.border.-bottom
                div.col.border.text-right
                div.col.border.col-10
                    div.line.-line20
                    div.circle-activity
                div.col.border.text-left(style="padding-top:12px;")
                    span.text-yellow {{player.time4}}
                    img(ng-src="./img/live/goal.png", style="padding-left:5px;", width="20px")
                    span.playerName {{player.name4}}
