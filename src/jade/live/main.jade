ion-view.live
    ion-nav-title
        a.button.button-clear(ng-click='back()')(style="margin-top:5px;")
            i.icon.ion-ios-keypad-outline
    ion-nav-buttons(side='right')
        a.button.button-clear(ng-click='')
            i.icon.ion-android-more-vertical

    ion-content.content
        ion-refresher(pulling-text='Pull to refresh...', on-refresh='doRefresh()')

        div.row.title
            div.col.text-center
                | {{title}}
        div.match-label
            div.row.row-center.section
                div.col.col-center.text-center
                    | {{matchLabel.item.datetime | date : 'MMM yyyy'}}
            div.row.content
                div.col.col-15.col-center.logo.text-center
                    img.image(ng-src="{{matchLabel.item.homeClub.logo}}")
                div.col.col-25.col-center.name.text-center
                    | {{matchLabel.item.homeClub.name}}
                div.col.col-20.col-center.detail.text-center
                    div.score
                        | {{matchLabel.item.homeClub.score}}-{{matchLabel.item.awayClub.score}}
                    div.datetime
                        | {{matchLabel.item.datetime | date:'dd MMM yyyy'}}
                div.col.col-25.col-center.name.text-center
                    | {{matchLabel.item.awayClub.name}}
                div.col.col-15.col-center.logo.text-center
                    img.image(ng-src="{{matchLabel.item.awayClub.logo}}")

        div.video
            iframe(ng-src="{{video.item.url}}", width="100%", height="230")

        div.activity(id="activity")
            div.line(id="activity-line")
            div.nodata(ng-if="activities.items.length == 0")
                div.row
                    div.col.col-center.text-center
                        div.text Has no activity.
            div(ng-repeat="activity in activities.items")
                div.row.row-center.wrap
                    div.col.col-center
                        div.text-right(ng-show="activity.align == 'left'")
                            span.name(ng-show="activity.name") {{activity.name}}
                            img.image(ng-show="activity.icon" ng-src="./img/live/icon/{{activity.icon}}.png",
                            srcset="./img/live/icon/{{activity.icon}}@2x.png 2x")
                            span.description(ng-show="activity.description") {{activity.description}}
                            span.time(ng-show="activity.time") {{activity.time}}
                    div.col.col-10.col-center.text-center
                        div.dot.-normal(ng-show="activity.dot == 'normal'")
                            i.icon.ion-record
                        div.dot.-halftime(ng-show="activity.dot == 'halftime'")
                            i.icon.ion-record
                        div.dot.-large(ng-show="activity.dot == 'large'")
                            i.icon.ion-ios-circle-filled
                    div.col.col-center
                        div.text-left(ng-show="activity.align == 'right'")
                            span.time(ng-show="activity.time") {{activity.time}}
                            span.description(ng-show="activity.description") {{activity.description}}
                            img.image(ng-show="activity.icon" ng-src="./img/live/icon/{{activity.icon}}.png",
                            srcset="./img/live/icon/{{activity.icon}}@2x.png 2x")
                            span.name(ng-show="activity.name") {{activity.name}}

        //ion-infinite-scroll(ng-if="more" on-infinite="loadMore()", distance="5%")