ion-view.live
    ion-nav-title Live
    ion-nav-buttons(side="left")
        a.button.button-icon.ion-ios-arrow-left(ng-if="isIOS", ng-click="back()")
            img.logo(
            src="./img/logo/navbar.png"
            srcset="./img/logo/navbar@2x.png 2x"
            )
    ion-nav-buttons(side="right")
        a.button.button-clear(ng-click="")
            i.icon.ion-android-more-vertical

    ion-content.content
        ion-refresher(pulling-text="Pull to refresh...", on-refresh="refresh()")

        div.match-label
            div.nodata(ng-if="matchLabel.items.length == 0")
                div.row
                    div.col.col-center.text-center
                        div.text Has no match.
            div(ng-repeat="item in matchLabel.items")
                div.row.row-center.section(ng-if="item.type == 'section'")
                    div.col.col-center.text-center
                        | {{section.datetime | date : 'MMM yyyy'}}
                div.row.label(ng-if="item.type == 'label'", ui-sref="match.detail({id : item.id})")
                    div.col.col-15.col-center.logo.text-center
                        img.image(ng-src="{{item.homeClub.logo}}")
                    div.col.col-25.col-center.name.text-center
                        | {{item.homeClub.name}}
                    div.col.col-20.col-center.detail.text-center
                        div(ng-if="item.template == 'before'")
                            div.time
                                | {{item.startTime | date:'HH:mm'}}
                            div.date
                                | {{item.startTime | date:'dd MMM yyyy'}}
                        div(ng-if="item.template == 'after'")
                            div.score
                                | {{item.homeClub.score}}-{{item.awayClub.score}}
                            div.date
                                | {{item.startTime | date:'dd MMM yyyy'}}
                    div.col.col-25.col-center.name.text-center
                        | {{item.awayClub.name}}
                    div.col.col-15.col-center.logo.text-center
                        img.image(ng-src="{{item.awayClub.logo}}")


        div.steaming(ng-if="steaming.item.url")
            iframe(ng-src="{{steaming.item.url}}", width="100%", height="230")

        div.match-events(id="match-events")
            div.line(id="match-events-line")

            div.nodata(ng-if="items.length == 0")
                div.row
                    div.col.col-center.text-center
                        div.text Has no match events.

            div(ng-repeat="item in items")
                div.row.row-center.killpadding
                    div.col.col-center
                        div.text-right(ng-if="item.align == 'left'")
                            span.name(ng-if="item.name") {{item.name}}
                            img.image(
                            ng-if="item.icon"
                            ng-src="./img/icon/{{item.icon}}.png"
                            srcset="./img/icon/{{item.icon}}@2x.png 2x"
                            )
                            span.description(ng-if="item.description") {{item.description}}
                            span.time(ng-if="item.time") {{item.time}}
                    div.col.col-10.col-center.text-center
                        div.dot.-normal(ng-if="item.dot == 'normal'")
                            i.icon.ion-record
                        div.dot.-halftime(ng-if="item.dot == 'halftime'")
                            i.icon.ion-record
                        div.dot.-large(ng-if="item.dot == 'large'")
                            i.icon.ion-ios-circle-filled
                    div.col.col-center
                        div.text-left(ng-if="item.align == 'right'")
                            span.time(ng-if="item.time") {{item.time}}
                            span.description(ng-if="item.description") {{item.description}}
                            img.image(
                            ng-if="item.icon"
                            ng-src="./img/icon/{{item.icon}}.png"
                            srcset="./img/icon/{{item.icon}}@2x.png 2x"
                            )
                            span.name(ng-if="item.name") {{item.name}}

