ion-view.live-main
    ion-nav-title
        a.button.button-clear(ng-click='back()')(style="margin-top:5px;")
            i.icon.ion-ios-keypad-outline
    ion-nav-buttons(side='right')
        a.button.button-clear(ng-click='')
            i.icon.ion-android-more-vertical
    div.bar.bar-subheader(style="background-color:#0056A5;")
        h2.title(style="color:#ffffff;") Live

    ion-content.content
        div.liveContent
            div.dateTop {{dateTop}}

            div.row(style="background-color:white;")
                div.col.col-15.teamLogo
                    div.teamLogo1
                        img(ng-src="./img/live/chonburi.png", width="40px")

                div.col.col-25.teamName
                    div.teamName1
                        span {{teamName1}}

                div.col.col-20.scoreAndDate
                    div.score
                        span {{score}}
                    div.dateMatch
                        span {{dateMatch}}

                div.col.col-25.teamName
                    div.teamName2
                        span {{teamName2}}

                div.col.col-15.teamLogoq
                    div.teamLogo2
                        img(ng-src="./img/live/suphanburi.png", width="40px")

            div.videoView
                iframe(ng-src="https://www.youtube.com/embed/3iL1Vy671Ds", width="100%" ,height="230")

            div.matchDetail
                div.row
                    div.col.align-right
                    div.col.col-10
                        div.circleTop
                    div.col.align-left

                div.row
                    div.col.align-right
                    div.col.col-10
                        div.verticalLineTop
                    div.col.align-left.textYellow
                        span 19 : 00 เริ่มแข่ง

                div.row
                    div.col.align-right
                        span.playerName {{playerName1}}
                        img(ng-src="./img/live/yellowCard.png", style="padding-left:5px;", width="20px")
                        span.textYellow 05 : 00
                    div.col.col-10
                        div.circleNormal
                        div.verticalLine
                    div.col.align-left

                div.row
                    div.col.align-right
                    div.col.col-10
                        div.circleNormal
                        div.verticalLine
                    div.col.align-left
                        span.textYellow 29 : 23
                        img(ng-src="./img/live/yellowCard.png", style="padding-left:5px;" , width="20px")
                        span.playerName {{playerName2}}

                div.row
                    div.col.align-right
                        span.playerName {{playerName3}}
                        img(ng-src="./img/live/goal.png", style="padding-left:5px;", width="20px")
                        span.textYellow  31 : 00
                    div.col.col-10
                        div.circleNormal
                        div.verticalLine
                    div.col.align-left

                div.row
                    div.col.align-right
                    div.col.col-10
                        div.circleNormalRed
                        div.verticalLine
                    div.col.align-left
                        span.textYellow

                div.row
                    div.col.align-right
                    div.col.col-10
                        div.circleNormal
                        div.verticalLineBot
                    div.col.align-left
                        span.textYellow 52 : 46
                        img(ng-src="./img/live/goal.png", style="padding-left:5px;", width="20px")
                        span.playerName {{playerName4}}
