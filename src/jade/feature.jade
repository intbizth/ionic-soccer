ion-view.feature
    ion-nav-title Feature
    ion-nav-buttons(side='left')
        a.button.button-icon.ion-chevron-left(ng-click='back()')
            object(data='../img/nav/logo.svg', type='image/svg+xml', width='64', height='16')

    ion-nav-buttons(side='right')
        a.button.button-clear(ng-click='')
            object(data='../img/nav/setting.svg', type='image/svg+xml', width='25', height='30')

    ion-content.content
        div.profile
            div.profile-view
                div.row
                    div.col.text-center
                        object(data='../img/feature/photo.svg', type='image/svg+xml', width='100', height='100')
                div.row
                    div.col.text-center
                        span.name {{fullname}}
        div.point
            div.row.row-center
                div.col.col-center
                    object(data='../img/feature/point.svg', type='image/svg+xml', width='25', height='25',
                    style='vertical-align:middle;')
                    span &nbsp;
                    span.plantext เกมทายผลทายสกอร์
                    span &nbsp;
                    span.hightlight {{point1}} Pls
                    span &nbsp;
                    span.plantext เกมทาย11ตัวจริง
                    span &nbsp;
                    span.hightlight {{point2}} Pls

        div.menus
            div.row
                div.col.col-center.button.button-clear
                    div.square
                        div.icon
                            object(data='../img/feature/menus/live.svg', type='image/svg+xml',
                        width='50', height='46')
                        div.plantext Live
                div.col.col-center.button.button-clear
                    div.square
                        div.icon
                            object(data='../img/feature/menus/timelineandupdate.svg', type='image/svg+xml',
                        width='50', height='46')
                        div.plantext Timeline & Update
                div.col.col-center.button.button-clear
                    div.square
                        div.icon
                            object(data='../img/feature/menus/competitionandtable.svg', type='image/svg+xml',
                        width='50', height='46')
                        div.plantext Competition & Table
            div.row-clear
            div.row
                div.col.col-center.button.button-clear
                    div.square
                        div.icon
                            object(data='../img/feature/menus/ticketandmembership.svg', type='image/svg+xml',
                            width='50', height='46')
                        div.plantext Ticket & Membership
                div.col.col-center.button.button-clear
                    div.square
                        div.icon
                            object(data='../img/feature/menus/games.svg', type='image/svg+xml',
                            width='50', height='46')
                        div.plantext Games
                div.col.col-center.button.button-clear
                    div.square
                        div.icon
                            object(data='../img/feature/menus/peopleranking.svg', type='image/svg+xml',
                            width='50', height='46')
