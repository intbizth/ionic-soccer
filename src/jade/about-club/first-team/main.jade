ion-refresher(pulling-text="Pull to refresh...", on-refresh="first-team.doRefresh()")

div.cover
    img.image(src="./img/about-club/first-team/cover.png")

div.headline
    div.title.text-center {{headline}}

div.box(ng-repeat="player in players")
    div.row.border
        div.col.col-center.text-center.clear
            div.position.-keeper(ng-show="player.position == 'G'")
                | {{player.position}}
            div.position.-defender(ng-show="player.position == 'D'")
                | {{player.position}}
            div.position.-midfield(ng-show="player.position == 'M'")
                | {{player.position}}
            div.position.-forword(ng-show="player.position == 'F'")
                | {{player.position}}
        div.col.col-center.clear
            div.circle-start
                div.circle
                    img.photo(ng-src="{{player.image}}")
        div.col.col-50.col-center.clear {{player.name}}
        div.col.col-center.clear {{player.number}}
        div.col.col-center.clear
            img(src="./img/about-club/first-team/eye-off.png", srcset="./img/about-club/first-team/eye-off@2x.png 2x", height="30px")
    div.line
