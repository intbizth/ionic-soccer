ion-view.about-club
    ion-nav-title {{'about_club.title' | trans}}
    ion-nav-buttons(side="left")
        a.button.button-nav.button-icon.ion-ios-arrow-left(ng-if="isIOS", ng-click="back()")
            img.logo(
            src="./img/logo/navbar.png"
            srcset="./img/logo/navbar@2x.png 2x"
            )

    ion-content.content(scroll="false")
        ion-tabs.tabs-striped.tabs-top.tabs-icon-left.tabs-background-positive.tabs-color-light
            ion-tab(title="{{'about_club.tab.info' | trans}}")
                ion-content.info.fix-tab
                    div(ui-view="info")
            ion-tab(title="{{'about_club.tab.team' | trans}}")
                ion-content.team.fix-tab
                    div(ui-view="team")
