ion-view.feature-main
    ion-nav-title {{'feature.title' | trans}}
    ion-nav-buttons(side="right")
        a.button.button-nav.button-icon.icon-right(
        ng-class="isLoggedin ? 'ion-log-out' : 'ion-log-in'",
        ng-click="isLoggedin ? logout() : login()"
        ) {{isLoggedin ? translate.logout : translate.login}}

    ion-content.content
        ion-refresher(pulling-text="{{'common.pull-to-refresh' | trans}}", on-refresh="profile.refresh()")

        div.profile
            div.row
                div.col.text-center(ng-switch="media.state")
                    img.picture.picture-blank(
                    ng-switch-when="blank",
                    ng-src="{{profile.itemDefault.picture}}",
                    ng-click="changePicture()"
                    )
                    img.picture.picture-load(
                    ng-switch-when="load",
                    image-cache="{{profile.item.picture}}",
                    ng-click="changePicture()"
                    )
                    img.picture.picture-new(
                    ng-switch-when="new",
                    ng-src="{{profile.item.picture}}",
                    ng-click="changePicture()"
                    )
            div.row
                div.col.text-center
                    span.name {{profile.item.name}}
        div.menus
            div.row.row-center
                div.col.col-center.grid(ui-sref="live")
                    div.square
                        div.live
                            img.icon(
                            src="./img/feature/menu/live.png"
                            srcset="./img/feature/menu/live@2x.png 2x"
                            )
                            div.text {{'feature.menu.live' | trans}}

                div.col.col-center.grid(ui-sref="timeline-update.main")
                    div.square
                        img.icon(
                        src="./img/feature/menu/timeline_and_update.png"
                        srcset="./img/feature/menu/timeline_and_update@2x.png 2x"
                        )
                        span.text {{'feature.menu.timeline-update' | trans}}

                div.col.col-center.grid(ui-sref="competition-table.main")
                    div.square
                        img.icon(
                        src="./img/feature/menu/competition_and_table.png"
                        srcset="./img/feature/menu/competition_and_table@2x.png 2x"
                        )
                        span.text {{'feature.menu.competition-table' | trans}}
            div.row.row-center
                div.col.col-center.grid(ui-sref="ticket-membership.main")
                    div.square
                        img.icon(
                        src="./img/feature/menu/ticket_and_membership.png"
                        srcset="./img/feature/menu/ticket_and_membership@2x.png 2x"
                        )
                        span.text {{'feature.menu.ticket' | trans}}
                div.col.col-center.grid(ui-sref="fanzone.main")
                    div.square
                        img.icon(
                        src="./img/feature/menu/fanzone.png"
                        srcset="./img/feature/menu/fanzone@2x.png 2x"
                        )
                        span.text {{'feature.menu.fanzone' | trans}}

            div.row.row-center
                div.col.col-center.grid(ui-sref="about-club.main")
                    div.about
                        img.icon(
                        src="./img/feature/menu/about_club.png"
                        srcset="./img/feature/menu/about_club@2x.png 2x"
                        )
                        div.text {{'feature.menu.about-club' | trans}}

        div.row.version
            div.col.text-right
                | {{'common.version' | trans}}: {{version}}
